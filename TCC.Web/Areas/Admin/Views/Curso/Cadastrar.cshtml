@model TCC.Web.Models.CursoModelView

@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2><i class="fas fa-book fa-fw"></i> Cadastrar Curso</h2>
<hr />
<hr />
@using (Html.BeginForm("Cadastrar", "Curso", new { area = "admin" }, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" })) {
    <div class="form-group">
        <label for="Descricao" class="col-sm-2 control-label">Descrição</label>
        <div class="col-sm-5">
            @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control", @required = "true" })
        </div>
    </div>
    <div class="form-group">
        <label for="Sigla" class="col-sm-2 control-label">Sigla</label>
        <div class="col-sm-5">
            @Html.TextBoxFor(model => model.Sigla, new { @class = "form-control", @required = "true" })
        </div>
    </div>
    <div class="form-group">
        <label for="CargaHoraria" class="col-sm-2 control-label">Carga Horária</label>
        <div class="col-sm-5">
            @Html.TextBoxFor(model => model.CargaHoraria, new { @class = "form-control", @required = "true" })
        </div>
    </div>
    <div class="form-group">
        <label for="IdAreaConhecimento" class="col-sm-2 control-label">Área do Conhecimento</label>
        <div class="col-sm-2">
            <select id="IdAreaConhecimento" name="IdAreaConhecimento" class="form-control">
                <option value="">--Selecione--</option>
                <option value="1">Ciências Agrárias</option>
                <option value="2">Ciências Biológicas</option>
                <option value="3">Ciências da Saúde</option>
                <option value="4">Ciências Exatas e da Terra</option>
                <option value="5">Engenharias</option>
                <option value="6">Ciências Humanas</option>
                <option value="7">Ciências Sociais Aplicadas</option>
                <option value="8">Lingüística, Letras e Artes</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="IdNivelEnsino" class="col-sm-2 control-label">Nível Ensino</label>
        <div class="col-sm-2">
            <select id="IdNivelEnsino" name="IdNivelEnsino" class="form-control">
                <option value="">--Selecione--</option>
                <option value="1">Fundamental</option>
                <option value="2">Médio</option>
                <option value="3">Superior</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="IdTipoCurso" class="col-sm-2 control-label">Tipo Curso</label>
        <div class="col-sm-2">
            <select id="IdTipoCurso" name="IdTipoCurso" class="form-control">
                <option value="">--Selecione--</option>
                <option value="1">Médio</option>
                <option value="2">Técnico</option>
                <option value="3">Superior</option>
                <option value="4">Tecnológico</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="IdModalidade" class="col-sm-2 control-label">Modalidade</label>
        <div class="col-sm-2">
            <select id="IdModalidade" name="IdModalidade" class="form-control">
                <option value="">--Selecione--</option>
                <option value="1">Presencial</option>
                <option value="2">EAD</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="NumeroPeriodos" class="col-sm-2 control-label">Número de Períodos</label>
        <div class="col-sm-2">
            <select id="NumeroPeriodos" name="NumeroPeriodos" class="form-control">
                <option value="">--Selecione--</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
                <option value="13">13</option>
                <option value="14">14</option>
                <option value="15">15</option>
                <option value="16">16</option>
                <option value="17">17</option>
                <option value="18">18</option>
                <option value="19">19</option>
                <option value="20">20</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="IdPeriodicidade" class="col-sm-2 control-label">Periodicidade</label>
        <div class="col-sm-2">
            <select id="IdPeriodicidade" name="IdPeriodicidade" class="form-control">
                <option value="">--Selecione--</option>
                <option value="1">Diário</option>
                <option value="2">Semanal</option>
                <option value="3">Semestral</option>
                <option value="4">Anual</option>
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
}