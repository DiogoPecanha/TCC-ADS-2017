@model TCC.Web.Models.UsuarioModelView
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2><i class="fas fa-user-plus fa-fw"></i> Cadastrar Usuário</h2>
<hr />
@using (Html.BeginForm("Cadastrar", "Usuario", new { area = "admin" }, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" })) {
    <div class="form-group">
        <label for="Login" class="col-sm-2 control-label">Login</label>
        <div class="col-sm-5">
            @Html.TextBoxFor(model => model.Login, new { @class = "form-control", @required = "true" })            
        </div>
    </div>
    <div class="form-group">
        <label for="Senha" class="col-sm-2 control-label">Senha</label>
        <div class="col-sm-5">
            @Html.TextBoxFor(model => model.Senha, new { @class = "form-control", @required = "true" })            
        </div>
    </div>
    <div class="form-group">
        <label for="Senha" class="col-sm-2 control-label">Perfil</label>
        <div class="col-sm-5">
            <select id="IdPerfil" name="IdPerfil" class = "form-control" required>
                <option value="">--Selecione--</option>
                @{
                    foreach (var perfil in Model.PerfisDisponiveis.Perfil) {
                        <option value="@perfil.Id">@perfil.Nome</option>
                    }
                }
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
}
